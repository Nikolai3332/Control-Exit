internal class Program
{
    private static void Main(string[] args)
    {
        string message = "";
        bool esc = true;

        while (message != "exit")
        {
            Console.Write("Введите exit если хотите завершить программу.");
            message = Console.ReadLine();
            esc = false;
            break;
        }
        Console.Clear();
    }
}
